{
  "name": "quorum-token-dapp",
  "version": "1.0.0",
  "description": "A ticket sales DApp integrated with Quorum blockchain",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && python -m uvicorn main:app --host localhost --port 8000 --reload",
    "frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && pip install -r requirements.txt",
    "build:frontend": "cd frontend && npm run build",
    "copy-abi": "npx copyfiles -u 1 \"./abis/*.json\" \"./backend/\" \"./frontend/src/\"",
    "test": "npx hardhat test --network hardhat",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js --network localhost"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "hardhat": "^2.26.3"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "quorum",
    "dapp",
    "ticket",
    "nft",
    "solidity"
  ],
  "author": "QuorumToken DApp",
  "license": "MIT"
}
